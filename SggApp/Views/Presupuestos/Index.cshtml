@model IEnumerable<SggApp.Web.Models.PresupuestoViewModel>
@{
ViewData["Title"] = "Mis Presupuestos";
}
<div class="container mt-4">
<h1 class="mb-3">@ViewData["Title"]</h1>
<p>
<a asp-action="Create" class="btn btn-primary">
<i class="bi bi-plus-circle"></i> Crear Nuevo Presupuesto
</a>
</p>
<table class="table table-striped table-hover table-bordered">
<thead class="table-dark">
<tr>
<th>@Html.DisplayNameFor(model => model.NombreCategoria)</th>
<th>@Html.DisplayNameFor(model => model.CodigoMoneda)</th>
<th>@Html.DisplayNameFor(model => model.Monto)</th>
<th>Acciones</th>
</tr>
</thead>
<tbody>
@foreach (var item in Model)
{
<tr>
<td>@Html.DisplayFor(modelItem => item.NombreCategoria)</td>
<td>@Html.DisplayFor(modelItem => item.CodigoMoneda)</td>
<td class="text-end">@Html.DisplayFor(modelItem => item.Monto)
</td>
<td>
<div class="btn-group" role="group">
<a asp-action="Details" asp-route-id="@item.Id"
class="btn btn-sm btn-info" title="Detalles">
<i class="bi bi-info-circle"></i>
</a>
<a asp-action="Edit" asp-route-id="@item.Id"
class="btn btn-sm btn-warning" title="Editar">
<i class="bi bi-pencil-square"></i>
</a>
<a asp-action="Delete" asp-route-id="@item.Id"
class="btn btn-sm btn-danger" title="Eliminar">
<i class="bi bi-trash"></i>
</a>
</div>
</td>
</tr>
}
</tbody>
</table>
</div>