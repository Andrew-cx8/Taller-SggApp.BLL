@model SggApp.Web.Models.PresupuestoFormViewModel
@{
ViewData["Title"] = "Crear Presupuesto";
}
<div class="container mt-4">
<div class="card">
<div class="card-header">
<h1 class="card-title">@ViewData["Title"]</h1>
</div>
<div class="card-body">
<form asp-action="Create" method="post">
@Html.AntiForgeryToken()
<div asp-validation-summary="ModelOnly" class="alert alert-danger"
role="alert"></div>
<div class="row">
<div class="col-md-6 mb-3">
<label asp-for="CategoriaId" class="form-label"></label>
<select asp-for="CategoriaId" class="form-select" asp-
items="@Model.CategoriasDisponibles">
<option value="">-- Seleccione una Categor√≠a --
</option>
</select>
<span asp-validation-for="CategoriaId" class="text-
danger"></span>
</div>
<div class="col-md-6 mb-3">
<label asp-for="MonedaId" class="form-label"></label>
<select asp-for="MonedaId" class="form-select" asp-
items="@Model.MonedasDisponibles">
<option value="">-- Seleccione una Moneda --</option>
</select>
<span asp-validation-for="MonedaId" class="text-danger">
</span>
</div>
</div>
<div class="mb-3">
<label asp-for="Monto" class="form-label"></label>
<input asp-for="Monto" class="form-control" type="number"
step="0.01" />
<span asp-validation-for="Monto" class="text-danger"></span>
</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
<button type="submit" class="btn btn-success">
<i class="bi bi-save"></i> Guardar
</button>
<a asp-action="Index" class="btn btn-secondary">
<i class="bi bi-x-circle"></i> Cancelar
</a>
</div>
</form>
</div>
</div>
</div>
@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}