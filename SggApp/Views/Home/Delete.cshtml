@model SggApp.Web.Models.GastoViewModel

@{
    ViewData["Title"] = "Eliminar Gasto";
}

<div class="container mt-4">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">¡Atención!</h4>
        <p>¿Estás seguro de que deseas eliminar este gasto?</p>
        <hr>
        <p class="mb-0">Esta acción no se puede deshacer.</p>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Detalles del Gasto a Eliminar</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Fecha)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Fecha)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreCategoria)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreCategoria)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Monto)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Monto)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CodigoMoneda)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CodigoMoneda)</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken() <!-- Importante para seguridad -->
                <input type="hidden" asp-for="Id" /> <!-- Campo oculto para el ID -->
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
